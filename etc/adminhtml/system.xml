<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
       <section id="augustash_facebookpixel" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
           <class>separator-top</class>
           <label><![CDATA[Facebookpixel]]></label>
           <tab>augustash</tab>
           <resource>Augustash_Facebookpixel::config</resource>
           <group id="general" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
               <label><![CDATA[Facebookpixel General Settings]]></label>
               <field id="enabled" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                   <label><![CDATA[Enable Extension]]></label>
                   <comment><![CDATA[Enable or diable module.]]></comment>
                   <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
               </field>
               <field id="account_number" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                   <label><![CDATA[Account Number]]></label>
                   <comment><![CDATA[Facebookpixel Account #]]></comment>
               </field>
            </group>
            <group id="advanced" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
               <label><![CDATA[Facebookpixel Advanced Settings]]></label>
               <field id="snippet" translate="label comment" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                   <label><![CDATA[Add Facebook Pixel javascript to header.]]></label>
                   <comment><![CDATA[Third-party modules may also add the Facebook Pixel javascript snippet. Stop this module from adding the snippet by selecting 'no'.]]></comment>
                   <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
               </field>
               <field id="revenue" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                   <label><![CDATA[Enable Revenue Tracking]]></label>
                   <comment><![CDATA[Enable or disable the return of order totals to the Facebook Pixel dashboard.]]></comment>
                   <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
               </field>
            </group>
        </section>
    </system>
</config>
